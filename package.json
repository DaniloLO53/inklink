{
  "name": "inklink",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "husky install",
    "lint-server": "cd server && echo hi && eslint src --max-warnings=0",
    "lint-client": "cd client && echo hi && eslint src --max-warnings=0",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "client/src/**/*": [
      "npm run lint-client -- --fix"
    ],
    "server/src/**/*": [
      "npm run lint-server -- --fix"
    ]
  },
